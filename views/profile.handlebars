<div class="row">
  <div class="col-auto" id= 'welcome'>
    <h2>Welcome, {{name}}!</h2>

    
  <div class="col-md-6 project-list">
    <h3>Current Brackets:</h3>

    {{#each brackets as |bracket|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <p>{{bracket.id}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{bracket.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>
  </div>
</div>

